{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length=150"],
  "python.formatting.blackPath": "/home/andres/.local/bin/black",
  "htmldjango.djhtml.tabWidth": 2,
  "markdownlint.onOpen": "true",
  "markdownlint.onChange": "true",
  "markdownlint.onSave": "true",
  "markdownlint.config": { 
    "default": true, 
    "line_length": false 
  }
}
